<Window x:Class="POP_SF_11_GUI.UI.TipNamestajaUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_11_GUI.UI"
        mc:Ignorable="d"
        Title="TipNamestajaUIWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="252"/>
            <ColumnDefinition Width="125"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Naziv:" HorizontalAlignment="Left" Width="45" Margin="0,0,0,10"/>
        <TextBox Grid.Row="0" FontSize="15" HorizontalAlignment="Left" Text="{Binding Path=Naziv}" Name="tbNaziv" Margin="50,0,0,10" Width="79"/>
        <Button Content="Sacuvaj" HorizontalAlignment="Right" Click="SacuvajTipNamestaja" Margin="0,94,29,-101" Grid.Row="3"/>
        <Button Content="Izlaz" HorizontalAlignment="Right" Click="Izlaz" Grid.ColumnSpan="2" Margin="0,94,95,-101" Grid.Row="3" Width="42" />

    </Grid>
</Window>
